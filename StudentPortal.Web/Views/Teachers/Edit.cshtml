@{
}


@model StudentPortal.Web.Models.Entities.Teacher

<h2>
    Edit Teacher
</h2>

@if(Model == null)
{
    <p>No Teacher Found with this ID</p>

}
else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">ID</label>
            <input type="text" class="form-control" asp-for="Id" />
        </div>
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        <div class="mt-3">
            <label class="form-label">Subject</label>
            <input type="text" class="form-control" asp-for="Subject" />
        </div>
        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>
        <div class="mt-3">
            <label class="form-label">Phone</label>
            <input type="text" class="form-control" asp-for="Phone" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3">Delete</button>
        </div>



    </form>
}