@{
}

@model List<StudentPortal.Web.Models.Entities.Teacher>

    <h2>Teacher List</h2>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Subject</th>
                <th>Description</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var teacher in Model)
            {
                <tr>
                    <td>@teacher.Id</td>
                    <td>@teacher.Name</td>
                    <td>@teacher.Subject</td>
                    <td>@teacher.Description</td>
                    <td>@teacher.Phone</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Teachers" asp-action="Edit" asp-route-id="@teacher.Id"> 
                            Edits

                        </a>
                    </td>
                </tr>
            
        }
        </tbody>
    </table>